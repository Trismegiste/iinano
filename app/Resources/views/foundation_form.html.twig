{% extends 'form_div_layout.html.twig' %}

{% block form_errors %}
{% if errors|length > 0 %}
    <small class="error">
    {% for error in errors %}
        {{ error.message }}{% if not loop.last %}<br />{% endif %}
    {% endfor %}
    </small>
{% endif %}
{% endblock form_errors %}

{% block form_row -%}
<div class="row">
    <div class="small-12 columns">
        <label {% if form.vars.errors|length > 0 %}class="error"{% endif %}>{{- form_label(form) -}}
            {{- form_widget(form) -}}
            {{- form_errors(form) -}}
        </label>
    </div>
</div>
{%- endblock form_row %}