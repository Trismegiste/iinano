                        </section>
                    </div>
                    {% endblock navbar %}
                </div>
            </div>

            <div class="large-6 columns">
                {% for flashMessage in app.session.flashbag.get('notice') %}
                <div data-alert class="alert-box success">
                    {{ flashMessage }}
                    <a href="#" class="close">&times;</a>
                </div>
                {% endfor %}

                {% for flashMessage in app.session.flashbag.get('warning') %}
