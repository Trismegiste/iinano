{% extends '::purecss_form.html.twig' %}

{% block form_row -%}
    <div class="pure-g">
        <div class="pure-u-1 pure-u-md-1-3">
            {{- form_label(form) -}}
        </div>
        <div class="pure-u-1 pure-u-md-2-3">
            {{- form_errors(form) -}}
            {{- form_widget(form) -}}
        </div>
    </div>
{%- endblock form_row %}

{% block button_row -%}
    <div class="pure-g">
        <div class="pure-u-1 pure-u-md-1-3"></div>
        <div class="pure-u-1 pure-u-md-2-3">
            {{- form_widget(form) -}}
        </div>
    </div>
{%- endblock button_row %}