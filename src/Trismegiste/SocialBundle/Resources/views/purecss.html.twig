{# This is a standard template for Yahoo PureCSS w/ responsive capabilities #}
{% macro menu_item(route, route_param, label, url_option='') %}
    <li {% if app.request.attributes.get('_route') == route and app.request.attributes.get('_route_params') == route_param %} class="pure-menu-selected" {% endif %}>
        <a href="{{ path(route, route_param) }}{{ url_option }}">{{ label }}</a>
    </li>
{% endmacro %}
{% import _self as pure %}
<!doctype html>
<html lang="en">
    <head>
        <meta charset="utf-8"/>
        <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
        <meta name="description" content="{% block meta_description %}A social network : simple, responsive and fast{% endblock %}"/>
        <title>{% block meta_title %}iinano{% endblock %}</title>
        {% block stylesheets %}
            <link rel="stylesheet" href="{{ asset('bundles/trismegistesocial/css/pure-min.css') }}"/>
            <link rel="stylesheet" href="{{ asset('bundles/trismegistesocial/css/grids-responsive-min.css') }}"/>
        {% endblock %}
    </head>
    <body>
        {% block full_body %}
        {% endblock %}
        {% block javascripts %}
        {% endblock %}
        {% include 'TrismegisteSocialBundle::google_tracking.html.twig' %}
    </body>
</html>