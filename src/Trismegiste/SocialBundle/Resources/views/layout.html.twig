{# Base template for the front #}
{% extends '::base.html.twig' %}

{%block stylesheets %}
{{ parent() }}
<style>
nav.top-bar {
    margin-bottom: 20px;
}
</style>
{% endblock %}

{% block topbar %}
<nav class="top-bar" data-topbar>
    <ul class="title-area">

        <li class="name">
            <h1>
                <a href="{{ path('content_index') }}">
                    {% block home_title %}Home{% endblock %}
                </a>
            </h1>
        </li>
        <li class="toggle-topbar menu-icon"><a href="#"><span>Menu</span></a></li>
    </ul>

    <section class="top-bar-section">

        <ul class="left">
            <li class="divider"></li>
            <li class="has-dropdown">
                <a href="#">New</a>
                <ul class="dropdown">
                    <li><a href="{{ path('simplepost_create') }}">Simple Post</a></li>
                    <li><a href="#">Status</a></li>
                    <li><a href="#">Pictures</a></li>
                    <li><a href="#">Video</a></li>
                </ul>
            </li>
            <li class="divider"></li>
            <li class="has-dropdown">
                <a href="#">Filter</a>
                <ul class="dropdown">
                    <li><a href="#">Me</a></li>
                    <li><a href="#">(Someone)</a></li>
                    <li><a href="#">Following</a></li>
                    <li><a href="#">Followers</a></li>
                    <li><a href="#">Friends</a></li>
                    <li class="divider"></li>
                    <li><a href="#">See all â†’</a></li>
                </ul>
            </li>
            <li class="divider"></li>
            <li class="has-form">
                <div class="row collapse">
                  <div class="large-8 small-9 columns">
                    <input type="text" placeholder="Find Stuff">
                  </div>
                  <div class="large-4 small-3 columns">
                    <a href="#" class="alert button expand">Search</a>
                  </div>
                </div>
            </li>
        </ul>

        <ul class="right">
            <li class="divider"></li>
            {% if app.user.author is defined %}
                <li>
                    <a href="{{ path('netizen_show',{ author: app.user.username}) }}">
                        {{ app.user.username }}
                    </a>
                </li>
                <li class="divider"></li>
                <li>
                    <a href="{{ path('trismegiste_logout') }}">
                        Sign out
                    </a>
                </li>            
            {% else %}
                <li>
                    <a href="{{ path('trismegiste_login') }}">
                        Sign in
                    </a>
                </li>
            {% endif %}
        </ul>

    </section>
</nav>
{% endblock %}

