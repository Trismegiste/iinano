{% extends 'TrismegisteSocialBundle::layout.html.twig' %}

{% block page_title %}
    {{ parent() }} | {{ author.nickname }}'s profile
{% endblock %}

{% block content %}
    {% if app.user.username == author.nickname %}
        <div class="pure-menu pure-menu-open pure-menu-horizontal submenu">
            <ul>
                <li><a href="{{ path('netizen_profile_edit') }}">Edit my profile</a></li>
                <li><a href="#">Change my password</a></li>
                <li><a href="{{ path('netizen_avatar_edit') }}">Change my avatar</a></li>
            </ul>
        </div>
    {% endif %}
    <div class="pure-g profile-full entry">
        <div class="pure-u-1-1 pure-u-md-1-3 pure-u-lg-1-4">
            <header>
                <img src="{{ path('picture_get', {storageKey:author.avatar, size:'full'}) }}" class="pure-img rounded"/>
            </header>
        </div>
        <div class="pure-u-1-1 pure-u-md-2-3 pure-u-lg-3-4 profile-body">
            <article>
                {% block profile_content %}
                {% endblock %}
            </article>
        </div>
    </div>
{% endblock content %}