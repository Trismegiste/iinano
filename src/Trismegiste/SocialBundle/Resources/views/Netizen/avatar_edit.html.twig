{% extends 'TrismegisteSocialBundle::layout.html.twig' %}

{% block content %}
<div class="row">
    <div class="large-6 small-12 column">
        <h3>Choose a picture</h3>
        {{ form_start(form) }}
        <div class="image-editor">
            {{ form_widget(form.picture, {attr: {class:'cropit-image-input button secondary'}}) }}
            <div class="cropit-image-preview"></div>
            <div class="image-size-label">
                Resize image
            </div>
            <input type="range" class="cropit-image-zoom-input"/>
        </div>
        {{ form_end(form) }}
    </div>
    <div class="large-6 small-12 column">
        <h3>Use your camera</h3>
    </div>
</div>
{% endblock content %}

{% block javascripts %}
{{ parent() }}
<script src="{{ asset('bundles/trismegistesocial/js/jquery.cropit.min.js') }}"></script>
<script>
    $(function() {
        $('.image-editor').cropit({
            imageState: {
                src: 'http://lorempixel.com/500/400/'
            }
        });
    });
</script>
{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        .cropit-image-preview {
            background-color: #f8f8f8;
            background-size: cover;
            border: 1px solid #ccc;
            border-radius: 3px;
            margin-top: 7px;
            width: 300px;
            height: 300px;
            cursor: move;
        }

        .cropit-image-background {
            opacity: .2;
            cursor: auto;
        }

        .image-size-label {
            margin-top: 0.6rem;
        }
    </style>
{% endblock %}