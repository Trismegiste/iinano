{# An entry full of information of a Netizen #}
<div class="pure-g entry netizen">
    <div class="pure-u-1-1 pure-u-md-1-4 pure-u-lg-1-5">
        <header>
            <a href="{{ path('netizen_show', {author: wallNick} ) }}"><img src="{{ path('picture_get', {storageKey: wallUser.author.avatar, size:'full'} ) }}"  class="pure-img rounded"/></a>
        </header>
    </div>
    <div class="pure-u-1-1 pure-u-md-3-4 pure-u-lg-4-5 profile-body">
        {% set author = wallUser.author %}
        {% set profile = wallUser.profile %}
        <div class="pure-g text-center">
            <div class="pure-u-2-3">
                <article>
                    <h2>{{ profile.fullName }}</h2>
                </article>
            </div>
            <div class="pure-u-1-3 automargin">
                {% include 'TrismegisteSocialBundle:Netizen:like_button.html.twig' %}
            </div>
        </div>
        <div class="pure-g text-center">
            <div class="pure-u-1-3">
                <h3>Registered</h3>
                <h4>{{ profile.joinedAt|timeago }}</h4>
            </div>
            <div class="pure-u-1-3">
                <h3><a href="{{ path('wall_index', {wallNick: wallNick, wallFilter:'self'}) }}">Post</a></h3>
                <h1>{{ profile.publishingCounter }}</h1>
            </div>
            <div class="pure-u-1-3 automargin">
                {% include 'TrismegisteSocialBundle:Netizen:follow_button.html.twig' %}
            </div>
        </div>

        {% include 'TrismegisteSocialBundle:Netizen:relation_counter.html.twig' with {netizen: wallUser} %}

    </div>
</div>