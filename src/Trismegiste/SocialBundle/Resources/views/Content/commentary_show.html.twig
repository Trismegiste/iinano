{# template for viewing one commentary entity #}
<div class="row commentary">
    <div class="large-2 columns small-3"><img src="{{ path('netizen_avatar', {filename: comment.author.avatar} ) }}"/></div>
    <div class="large-10 columns">
        {% set dropdown_id = 'drop' ~ content.id ~ comment.uuid %}
        <a href="#" class="right" data-options="align:left" data-dropdown="{{ dropdown_id }}"><i class="fi-widget"></i></a>
        <ul id="{{ dropdown_id }}" class="f-dropdown" data-dropdown-content>
            {% if is_granted('OWNER', comment) %}
            <li><a href="{{ path('pub_commentary_edit', {wallNick: wallNick, wallFilter: wallFilter, id: content.id, uuid: comment.uuid}) }}">Edit</a></li> 
            <li><a href="{{ path('pub_commentary_delete', {wallNick: wallNick, wallFilter: wallFilter, id: content.id, uuid: comment.uuid}) }}">Delete</a></li>
            {% endif %}
            <li><a href="#">Report</a></li>
        </ul>
        <a id="anchor-{{ content.id }}-{{ comment.uuid }}"></a>
        <h6 class="subheader">
            {{ comment.author.nickname }}
            <small>{{ comment.lastEdited | timeago }}</small>
        </h6>
        <p>{{ comment.message }}</p>
        {% include 'TrismegisteSocialBundle:Content:commentary_like_button.html.twig' %}
    </div>
</div>
