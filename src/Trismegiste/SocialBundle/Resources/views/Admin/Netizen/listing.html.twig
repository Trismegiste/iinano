{% extends 'TrismegisteSocialBundle:Admin:layout.html.twig' %}

{% block page_title %}
    {{ parent() }} | User administration
{% endblock %}

{% block content %}
    <div class="pure-g">
        <div class="pure-u-1">
            <form action="{{ path('admin_netizen_listing') }}" class="pure-form">
                <label>Find a user</label><input type="text" name="search"/>
                <button class="pure-button pure-button-primary">Search</button>
            </form>
            <table class="pure-table pure-table-horizontal pure-table-striped">
                <tr>
                    <th style="width: 3em;"></th>
                    <th>Nickname</th>
                    <th>Email</th>
                    <th>Registered</th>
                    <th>Posts</th>
                    <th>Expired</th>
                </tr>
                {% for netizen in listing %}
                    <tr>
                        <td><input type="checkbox" class="action-selection"/></td>
                        <td><a href="{{ path('admin_netizen_show', {id: netizen.id}) }}">{{ netizen.author.nickname }}</a></td>
                        <td>{{ netizen.profile.email }}</td>
                        <td>{{ netizen.profile.joinedAt|timeago }}</td>
                        <td>{{ netizen.profile.publishingCounter|si }}</td>
                        <td>
                            {% if netizen.lastTicket is not null %}
                                {{ netizen.lastTicket.expiredAt|timeago }}
                            {% endif %}
                        </td>
                    </tr>
                {% endfor %}
            </table>
        </div>
    </div>
{% endblock %}