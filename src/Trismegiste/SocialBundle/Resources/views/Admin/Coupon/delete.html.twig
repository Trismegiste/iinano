{% extends 'TrismegisteSocialBundle:Admin:layout.html.twig' %}

{% block meta_title %}
    {{ parent() }} | Delete a coupon
{% endblock %}

{% block content %}
    <div class="pure-g">
        <div class="pure-u-1 pure-u-md-1-2">
            <h3>Are you sure you want to delete the coupon {{ coupon.hashKey }} ?</h3>
            <form action="" method="POST" class="pure-form">
                <button class="pure-button">Delete</button>
            </form>
        </div>
    </div>
{% endblock %}