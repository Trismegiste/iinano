{% extends 'TrismegisteSocialBundle:Admin:layout.html.twig' %}

{% block meta_title %}
    {{ parent() }} | Dashboard
{% endblock %}

{% block content %}
    <div class="pure-g">
        <div class="pure-u-1 pure-u-md-1-2 dashboard-tile">
            <article>
                <h1>Users</h1>
                <h2>{{ user|si }}</h2>
            </article>
        </div>
        <div class="pure-u-1 pure-u-md-1-2 dashboard-tile">
            <article>
                <h1>Content</h1>
                <table class="pure-table pure-table-striped" width="100%">
                    <tr><th>Type</th><th>Count</th></tr>
                    {% for counter in content %}
                        <tr>
                            <td>{{ counter._id }}</td>
                            <td>{{ counter.counter|si }}</td>
                        </tr>
                    {% endfor %}
                </table>
            </article>
        </div>
        <div class="pure-u-1 pure-u-md-1-2 dashboard-tile">
            <article>
                <h1>Health</h1>
                <h2>Load {{ health.cpu.0 }} {{ health.cpu.1 }} {{ health.cpu.2 }}</h2>
                <h2>Memory {{ health.memory|si }}</h2>
                <h2>Collection size {{ health.mongo.size|si }}</h2>
                <h2>Doc avg size {{ health.mongo.avgObjSize|si }}</h2>
                <h2>Index size {{ health.mongo.totalIndexSize|si }}</h2>
            </article>
        </div>
    </div>
{% endblock %}