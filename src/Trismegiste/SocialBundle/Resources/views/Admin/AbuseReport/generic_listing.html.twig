{% extends 'TrismegisteSocialBundle:Admin:layout.html.twig' %}

{% block meta_title %}
    {{ parent() }} | Abuse report & moderation
{% endblock %}

{% block _admin_abusereport_action_action_rowwww %}
    <div class="pure-g">
        <div class="pure-u-1-4">
            {{ form_widget(form) }}
        </div>
    </div>
{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        .content button {
            margin-top: 0.3em;
            margin-left: 1em;
        }
    </style>
{% endblock %}

{% block content %}
    <div class="pure-g">
        <div class="pure-u-1">
            {{ form_start(form) }}
            <fieldset>
                <table class="pure-table pure-table-horizontal pure-table-striped abuse-listing">
                    <tr>
                        <th></th>
                        <th>Content</th>
                        <th>Author</th>
                        <th>Reported</th>
                    </tr>
                    {{ form_row(form.selection_list) }}
                </table>
                <div class="pure-g">
                    <div class="pure-u-1-4">
                        {{ form_widget(form.action) }}
                    </div>
                    <div class="pure-u-1-4">
                        {{ form_widget(form.makeItSo) }}
                    </div>
                </div>
            </fieldset>
            {{ form_end(form) }}
        </div>
    </div>
{% endblock %}
