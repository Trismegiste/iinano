{% extends 'TrismegisteSocialBundle:Admin:layout.html.twig' %}

{% block meta_title %}
    {{ parent() }} | Abuse report & moderation
{% endblock %}

{% block content %}
    <div class="pure-g">
        <div class="pure-u-1">
            <table class="pure-table pure-table-horizontal pure-table-striped abuse-listing">
                <tr>
                    <th style="width: 3em;"></th>
                    <th>Content</th>
                    <th>Author</th>
                    <th style="width: 8em;">Reported</th>
                </tr>
                {% for report in listing %}
                    <tr>
                        <td><input type="checkbox" class="action-selection"/></td>
                        <td>
                            <a href="{{ path('pub_permalink', {id: report._id}) }}#anchor-{{ report._id }}-{{ report.commentary.uuid }}">
                                {{ report.commentary.message }}
                            </a>
                        </td>
                        <td>{{ report.commentary.owner.nickname }}</td>
                        <td class="text-center">{{ report.commentary.abusiveCount }}</td>
                    </tr>
                {% endfor %}
            </table>
        </div>
    </div>
{% endblock %}