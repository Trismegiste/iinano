{% extends 'TrismegisteSocialBundle:Admin:layout.html.twig' %}

{% block meta_title %}
    {{ parent() }} | Abuse report & moderation
{% endblock %}

{% block content %}
    <div class="pure-g">
        <div class="pure-u-1">
            <table class="pure-table pure-table-horizontal pure-table-striped abuse-listing">
                <tr>
                    <th style="width: 3em;"></th>
                    <th style="width: 8em;">Type</th>
                    <th>Content</th>
                    <th style="width: 8em;">Reported</th>
                </tr>
                {% for report in listing %}
                    <tr>
                        <td><input type="checkbox" class="action-selection"/></td>
                        <td>{{ report.type }}</td>
                        <td>{% include 'TrismegisteSocialBundle:Admin/AbuseReport:show/' ~ report.type ~ '.html.twig' %}</td>
                        <td class="text-center">{{ report.counter }}</td>
                    </tr>
                {% endfor %}
            </table>
        </div>
    </div>
{% endblock %}