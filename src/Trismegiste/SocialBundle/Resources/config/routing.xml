<?xml version="1.0" encoding="UTF-8" ?>

<routes xmlns="http://symfony.com/schema/routing"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://symfony.com/schema/routing http://symfony.com/schema/routing/routing-1.0.xsd">

    <route id="content_index" pattern="/">
        <default key="_controller">TrismegisteSocialBundle:Content:index</default>
        <requirement key="_method">GET</requirement>
    </route>

    <route id="simplepost_create" pattern="/simplepost/create">
        <default key="_controller">TrismegisteSocialBundle:SimplePost:create</default>
    </route>
    <route id="simplepost_edit" pattern="/simplepost/edit/{id}">
        <default key="_controller">TrismegisteSocialBundle:SimplePost:edit</default>
    </route>
    <route id="simplepost_delete" pattern="/simplepost/delete/{id}">
        <default key="_controller">TrismegisteSocialBundle:SimplePost:delete</default>
    </route>
    
    <route id="foreigner_about" pattern="/about">
        <default key="_controller">TrismegisteSocialBundle:Foreigner:about</default>
        <requirement key="_method">GET</requirement>
    </route>
    
    <route id="pub_famous_add" pattern="/pub/{id}/famous/add">
        <default key="_controller">TrismegisteSocialBundle:Famous:addFanOnPublish</default>
    </route>
    <route id="pub_famous_remove" pattern="/pub/{id}/famous/remove">
        <default key="_controller">TrismegisteSocialBundle:Famous:removeFanOnPublish</default>
    </route>

    <route id="pub_commentary_add" pattern="/pub/{id}/commentary/add">
        <default key="_controller">TrismegisteSocialBundle:Commentary:addOnPublishing</default>
    </route>
    <route id="pub_commentary_edit" pattern="/pub/{id}/commentary/{uuid}/edit">
        <default key="_controller">TrismegisteSocialBundle:Commentary:editOnPublishing</default>
    </route>
    <route id="pub_commentary_delete" pattern="/pub/{id}/commentary/{uuid}/delete">
        <default key="_controller">TrismegisteSocialBundle:Commentary:deleteOnPublishing</default>
    </route>

    <route id="commentary_famous_add" pattern="/pub/{id}/commentary/{uuid}/famous/add">
        <default key="_controller">TrismegisteSocialBundle:Famous:addFanOnCommentary</default>
    </route>
    <route id="commentary_famous_remove" pattern="/pub/{id}/commentary/{uuid}/famous/remove">
        <default key="_controller">TrismegisteSocialBundle:Famous:removeFanOnCommentary</default>
    </route>
    
</routes>
