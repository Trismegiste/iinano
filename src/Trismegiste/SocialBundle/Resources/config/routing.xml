<?xml version="1.0" encoding="UTF-8" ?>

<routes xmlns="http://symfony.com/schema/routing"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://symfony.com/schema/routing http://symfony.com/schema/routing/routing-1.0.xsd">

    <route id="trismegiste_homepage" pattern="/">
        <default key="_controller">TrismegisteSocialBundle:Vertex:index</default>
    </route>

    <route id="foreigner_about" pattern="/about">
        <default key="_controller">TrismegisteSocialBundle:Foreigner:about</default>
    </route>
    
    <route id="foreigner_authenticate" pattern="/login">
        <default key="_controller">TrismegisteSocialBundle:Foreigner:login</default>
    </route>

    <route id="publish_detail" pattern="/pub/{pk}">
        <default key="_controller">TrismegisteSocialBundle:Vertex:detail</default>
    </route>

    <route id="famous_add" pattern="/pub/famous/add/{id}">
        <default key="_controller">TrismegisteSocialBundle:Famous:addFanOnPublish</default>
    </route>
    <route id="famous_remove" pattern="/pub/famous/del/{id}">
        <default key="_controller">TrismegisteSocialBundle:Famous:removeFanOnPublish</default>
    </route>

</routes>
