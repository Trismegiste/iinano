<?xml version="1.0" encoding="UTF-8" ?>

<routes xmlns="http://symfony.com/schema/routing"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://symfony.com/schema/routing http://symfony.com/schema/routing/routing-1.0.xsd">

    <route id="content_index" pattern="/">
        <default key="_controller">TrismegisteSocialBundle:Publishing:index</default>
    </route>

    <route id="foreigner_about" pattern="/about">
        <default key="_controller">TrismegisteSocialBundle:Foreigner:about</default>
        <requirement key="_method">GET</requirement>
    </route>
    
    <route id="publishing_show" pattern="/pub/{id}">
        <default key="_controller">TrismegisteSocialBundle:Publishing:show</default>
    </route>

    <route id="famous_add" pattern="/pub/famous/add/{id}">
        <default key="_controller">TrismegisteSocialBundle:Famous:addFanOnPublish</default>
    </route>
    <route id="famous_remove" pattern="/pub/famous/del/{id}">
        <default key="_controller">TrismegisteSocialBundle:Famous:removeFanOnPublish</default>
    </route>

</routes>
