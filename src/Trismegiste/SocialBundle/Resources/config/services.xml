<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>

        <service id="social.content.repository" class="Trismegiste\SocialBundle\Repository\PublishingRepository">
            <argument type="service" id="dokudoki.repository"/>
            <argument type="service" id="security.context"/>
        </service>

        <service id="social.image.tool" class="Trismegiste\SocialBundle\Utils\ImageRefiner"></service>

        <service id="social.avatar.repository" class="Trismegiste\SocialBundle\Repository\AvatarRepository">
            <argument type="string">%kernel.root_dir%/../storage/</argument>
            <argument type="service" id="social.image.tool"/>
            <argument/> <!-- injected by Extension -->
        </service>

        <service id="social.netizen.repository" class="Trismegiste\SocialBundle\Repository\NetizenRepository">
            <argument type="service" id="dokudoki.repository"/>
            <argument type="service" id="security.encoder_factory"/>
            <argument/> <!-- injected by Extension -->
            <argument type="service" id="social.avatar.repository"/>
        </service>

        <service id="security.netizen.provider" class="Trismegiste\SocialBundle\Security\NetizenProvider">
            <argument type="service" id="social.netizen.repository"/>
        </service>

        <service id="twig.social.renderer" class="Trismegiste\SocialBundle\Utils\RendererExtension">
            <tag name="twig.extension"/>
            <!-- inject translation service here -->
        </service>

        <service id="security.owner.voter" class="Trismegiste\SocialBundle\Security\OwnerVoter">
            <tag name="security.voter"/>
        </service>

        <service id="social.type.netizen.register" class="Trismegiste\SocialBundle\Form\RegisterType">
            <argument type="service" id="social.netizen.repository"/>
            <argument>%nickname_regex%</argument>
            <tag name="form.type" alias="netizen_register"/>
        </service>

        <service id="social.type.gender" class="Trismegiste\SocialBundle\Form\GenderType">
            <tag name="form.type" alias="gender"/>
        </service>

        <service id="social.validator.unique_nickname" class="Trismegiste\SocialBundle\Validator\UniqueNicknameValidator">
            <argument type="service" id="social.netizen.repository"/>
            <tag name="validator.constraint_validator" alias="unique_nickname"/>
        </service>

    </services>
</container>
