<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        
        <service id="social.user.repository" class="Trismegiste\Socialist\Repository\User">
            <argument type="service" id="dokudoki.repository"/>
        </service>            
        
        <service id="security.socialuser.provider" class="Trismegiste\SocialBundle\Security\SocialUserProvider">
            <argument type="service" id="social.user.repository"/>
        </service>

        <service id="twig.humandate.renderer" class="Trismegiste\SocialBundle\Utils\HumanDateExtension">
            <tag name="twig.extension"/>
        </service>

    </services>
</container>
